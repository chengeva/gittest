<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.acaia.acaiaupdater"
    android:versionCode="20"
    android:versionName="1.1.6" >


    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />
    <!-- For blue tooth -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- For accessing Storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- For accessing Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>



    <application
        android:name="co.acaia.acaiaupdater.AcaiaUpdater"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/ZendeskSdkTheme"
        tools:replace="android:icon" >
        <meta-data
            android:name="DATABASE"
            android:value="acaia.firmwareupdater.db" />
        <meta-data
            android:name="VERSION"
            android:value="7" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="co.acaia.acaiaupdater.entity" />

        <activity
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:name=".SettingScanScaleListActivity"
            android:label="SettingScanScaleListActivity" >
        </activity>

        <service
            android:name="co.acaia.communications.scaleService.ScaleCommunicationService"
            android:enabled="true" />

        <activity
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:name=".util.ListActivity"
            android:label="@string/title_activity_list" >
        </activity>
        <activity android:name="net.hockeyapp.android.UpdateActivity" />
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:name=".ui.CheckFirmwareActivity"
            android:label="@string/title_activity_check_firmware" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:name=".ui.ConnectScaleWithAppActivity"
            android:label="@string/title_activity_connect_scale_with_app" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:name=".ui.FirmwareUpdateActivity"
            android:label="@string/title_activity_firmware_update" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:name=".ui.TroubleShootingActivity"
            android:label="@string/title_activity_trouble_shooting" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:name=".ui.StartFirmwareUpdate"
            android:label="@string/title_activity_start_firmware_update" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:name=".ui.SelectFirmwareFromListActivity"
            android:label="@string/title_activity_select_firmware_from_list" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:name=".ui.SelectFirmwareActivity"
            android:label="@string/title_activity_select_firmware" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".FeedbackInitActivity"
            android:label="@string/title_activity_feedback_init"
            android:theme="@style/AppTheme">
        </activity>

    </application>

</manifest>
