<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="co.acaia.acaiaupdater"
    android:versionCode="20"
    android:versionName="1.1.6">

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" /> <!-- For blue tooth -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> <!-- For accessing Storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- For accessing Internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".AcaiaUpdater"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/ZendeskSdkTheme"
        tools:replace="android:icon">
        <activity android:name=".view.FirmwareUpdateActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".view.deviceList.UpdateFirmwareActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.ConnectScaleActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.FirmwareSelectActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.MainDeviceActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".SettingScanScaleListActivity"
            android:label="SettingScanScaleListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <service
            android:name="co.acaia.communications.scaleService.ScaleCommunicationService"
            android:enabled="true" />

        <activity
            android:name=".util.ListActivity"
            android:label="@string/title_activity_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name="net.hockeyapp.android.UpdateActivity" />
        <activity
            android:name=".ui.CheckFirmwareActivity"
            android:label="@string/title_activity_check_firmware"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.ConnectScaleWithAppActivity"
            android:label="@string/title_activity_connect_scale_with_app"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.FirmwareUpdateActivity"
            android:label="@string/title_activity_firmware_update"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.TroubleShootingActivity"
            android:label="@string/title_activity_trouble_shooting"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.StartFirmwareUpdate"
            android:label="@string/title_activity_start_firmware_update"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.SelectFirmwareFromListActivity"
            android:label="@string/title_activity_select_firmware_from_list"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.SelectFirmwareActivity"
            android:label="@string/title_activity_select_firmware"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".FeedbackInitActivity"
            android:label="@string/title_activity_feedback_init"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
    </application>

</manifest>